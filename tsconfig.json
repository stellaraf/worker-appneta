{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "outDir": "./dist",
    "lib": ["ESNEXT", "WebWorker"],
    "types": ["@cloudflare/workers-types", "node"],
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["./src/*.ts", "./src/**/*.ts", "bindings.d.ts", "./types/*.d.ts"],
  "exclude": ["node_modules/", "dist/"]
}
